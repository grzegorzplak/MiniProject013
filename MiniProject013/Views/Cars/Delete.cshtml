@model Car

<form method="post">
    <input asp-for="Id" hidden />
    <div class="boreder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Car</h2>
        </div>
        <div class="mb-3">
            <span asp-validation-summary="ModelOnly" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BrandName"></label>
            <input asp-for="BrandName" type="text" class="form-control" disabled />
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ModelName"></label>
            <input asp-for="ModelName" type="text" class="form-control" disabled />
            <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Previous Car Image</label>
            <img src="@Model.CarImage" />
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-action="Index" asp-controller="Cars" class="btn btn-secondary form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}